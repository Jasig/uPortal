<channelDef>

  <description>
    A Web Services for Remote Portals (WSRP) consumer.
  </description>

  <class>org.jasig.portal.channels.portlet.CPortletAdapter</class>

  <params>
    <step>
      <ID>1</ID>

      <name>WSRP Producer Info</name>

      <description>
        Enter the WSRP service URLs.
      </description>

      <parameter modify="publish">
        <name>PORTLET.wsrp_markup_url</name>
        <label>Markup Interface URL</label>
        <type base="string" input="text" display="text">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>http://www.webservices.org:8080/wsrp/wsrp4j/WSRPBaseService</example>
        <description>
          The WSRP Base service
        </description>
      </parameter>

      <parameter modify="publish">
        <name>PORTLET.wsrp_service_desc_url</name>
        <label>Service Description Interface URL</label>
        <type base="string" input="text" display="text">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>http://www.webservices.org:8080/wsrp/wsrp4j/WSRPServiceDescriptionService</example>
        <description>
          The WSRP Service Description service
        </description>
      </parameter>

      <parameter modify="publish">
        <name>PORTLET.wsrp_reg_url</name>
        <label>Registration Interface URL</label>
        <type base="string" input="text" display="text">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>http://www.webservices.org:8080/wsrp/wsrp4j/WSRPRegistrationService</example>
        <description>
          The WSRP Registration service (optional)
        </description>
      </parameter>

      <parameter modify="publish">
        <name>PORTLET.wsrp_portlet_mgmt_url</name>
        <label>Portlet Management Interface URL</label>
        <type base="string" input="text" display="text">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>http://www.webservices.org:8080/wsrp/wsrp4j/WSRPPortletManagementService</example>
        <description>
          The WSRP Portlet Management service (optional)
        </description>
      </parameter>

      <parameter modify="publish-only">
        <name>portletDefinitionId</name>
        <label>Portlet Definition ID (should be hidden)</label>
        <type base="string" input="text" display="hidden">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>proxyportlet.ProxyPortlet</example>
        <defaultValue>proxyportlet.ProxyPortlet</defaultValue>
      </parameter>

    </step>

    <step>
      <ID>2</ID>

      <name>WSRP Portlet Handle</name>

      <description>
        Enter the WSRP portlet handle.
      </description>

      <parameter modify="subscribe">
        <name>PORTLET.wsrp_portlet_handle</name>
        <label>Portlet Handle</label>
        <type base="string" input="text" display="text">
          <!-- length and maxlength for text field -->
          <length>80</length>
          <maxlength>255</maxlength>
        </type>
        <example>thePortletHandle</example>
        <description>
          The WSRP Portlet Handle.  Keep the \'User can modify?\' checkbox checked
          (translates to a read-only preference setting of \'No\')
          so that the consumer can programmatically change the portlet handle
          if the producer decides to clone the portlet.
        </description>
      </parameter>

    </step>

  </params>

  <controls>
    <control type="edit" include="no" override="yes"/>
    <control type="about" include="no" override="yes"/>
    <control type="help" include="no" override="yes"/>
  </controls>

</channelDef>
