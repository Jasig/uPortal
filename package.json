{
  "name": "uportal",
  "private": true,
  "devDependencies": {
    "eslint": "^6.0.0",
    "eslint-config-google": "^0.13.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-consistent": "^2.0.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "remark-validate-links": "^8.0.3",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.1"
  },
  "scripts": {
    "lint": "run-s lint:*",
    "lint-ci": "npm run lint:js",
    "lint:js": "eslint . --ignore-path .gitignore --ignore-pattern *.min.js",
    "lint:less": "stylelint **/*.less !**/bootstrap/**/*.less",
    "lint:md": "remark -f *.md docs/**",
    "format": "run-p -c format:*",
    "format:js": "eslint . --fix --ignore-path .gitignore --ignore-pattern *.min.js",
    "format:less": "stylelint --fix **/*.less !**/bootstrap/**/*.less"
  },
  "eslintConfig": {
    "extends": [
      "google",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 4,
          "singleQuote": true,
          "trailingComma": "es5",
          "bracketSpacing": false
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 80,
          "tabWidth": 4,
          "ignoreUrls": true,
          "ignoreComments": true,
          "ignoreStrings": true
        }
      ],
      "new-cap": "warn",
      "arrow-parens": "off",
      "constructor-super": "off",
      "generator-star-spacing": "off",
      "no-new-symbol": "off",
      "no-this-before-super": "off",
      "no-invalid-this": "off",
      "no-var": "off",
      "prefer-rest-params": "off",
      "prefer-spread": "off",
      "valid-jsdoc": "warn",
      "rest-spread-spacing": "off",
      "yield-star-spacing": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "no-descending-specificity": null,
      "at-rule-no-unknown": null
    }
  },
  "prettier": {
    "tabWidth": 4
  }
}
