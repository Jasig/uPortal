{
  "name": "uportal",
  "private": true,
  "devDependencies": {
    "eslint": "4.0.0-beta.0",
    "eslint-config-google": "0.7.1",
    "remark-cli": "^3.0.1",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^2.0.0",
    "remark-validate-links": "^6.0.0",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0"
  },
  "scripts": {
    "lint-js": "eslint . --ignore-path .gitignore --ignore-pattern *.min.js --ignore-pattern jstree.js --ignore-pattern less-1.6.2.js",
    "lint-less": "stylelint --syntax less **/*.less !**/bootstrap/**/*.less",
    "lint-md": "remark -f *.md docs/**"
  },
  "eslintConfig": {
    "extends": "google",
    "rules": {
      "indent": [
        "warn",
        4
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
