<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
  <bean id="jmxAdapter" class="org.springframework.jmx.export.MBeanExporter">
    <property name="beans">
      <map>
        <entry key="uPortal:name=framework">
          <ref local="framework"/>
        </entry>
      </map>
    </property>
    <property name="assembler">
      <ref bean="metadataAssembler"/>
    </property>
  </bean>
  <bean id="metadataAssembler" class="org.springframework.jmx.export.assembler.InterfaceBasedMBeanInfoAssembler">  </bean>
  <bean id="framework" class="org.jasig.portal.jmx.FrameworkMBeanImpl">  </bean>
</beans>
