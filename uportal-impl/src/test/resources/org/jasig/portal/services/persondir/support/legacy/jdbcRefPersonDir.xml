			</attribute>
			<attribute>
				<name>role</name>
				<alias>uPortalAffiliation</alias>
			</attribute>
			<attribute>
				<name>first_name</name>
				<alias>givenName</alias>
			</attribute>
			<attribute>
				<name>email_alias</name>
				<alias>email</alias>
			</attribute>
			<attribute>
				<name>alias</name>
				<alias>alias</alias>
			</attribute>
			<attribute>
				<name>person_type</name>
				<alias>personType</alias>
			</attribute>
			<attribute>
				<name>college</name>
				<alias>YaleCollege</alias>
			</attribute>
			<attribute>
